{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EcoIndex Analyzer",
  "version": "0.0.1",
  "identifier": "fr.ecoindex.analyzer",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/ecoindex-app/browser"
  },
  "app": {
    "windows": [
      {
        "title": "EcoIndex Analyzer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'"
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/node"],
    "resources": ["resources/lighthouse-sidecar/**/*", "binaries/chrome-headless-shell-*/**/*"],
    "category": "DeveloperTool",
    "shortDescription": "Analyseur d'empreinte environnementale web",
    "longDescription": "EcoIndex Analyzer mesure l'impact environnemental des pages web en calculant l'EcoIndex et les métriques Lighthouse.",
    "copyright": "© 2025 EcoIndex Analyzer",
    "publisher": "EcoIndex",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "fr-FR"
      },
      "nsis": {
        "languages": ["French", "English"],
        "displayLanguageSelector": true
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libnss3",
          "libatk1.0-0",
          "libatk-bridge2.0-0",
          "libcups2",
          "libdrm2",
          "libxkbcommon0",
          "libxcomposite1",
          "libxdamage1",
          "libxfixes3",
          "libxrandr2",
          "libgbm1",
          "libasound2"
        ],
        "section": "devel"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "entitlements": null
    }
  },
  "plugins": {}
}
