{
  "name": "ecoindex-app",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:tauri": "cd src-tauri && cargo build --release",
    "build:all": "pnpm build && pnpm build:tauri",
    "watch": "ng build --watch --configuration development",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:rust": "cd src-tauri && cargo clippy -- -D warnings",
    "lint:all": "pnpm lint && pnpm lint:rust",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run",
    "bundle:lighthouse": "node scripts/bundle-lighthouse.mjs",
    "download:chrome": "node scripts/download-chrome.mjs",
    "download:chrome:win": "node scripts/download-chrome.mjs win",
    "download:chrome:linux": "node scripts/download-chrome.mjs linux",
    "download:chrome:mac-x64": "node scripts/download-chrome.mjs mac-x64",
    "download:chrome:mac-arm": "node scripts/download-chrome.mjs mac-arm",
    "download:node": "node scripts/download-node.mjs",
    "setup:sidecar": "pnpm download:chrome && pnpm download:node && pnpm bundle:lighthouse",
    "check": "pnpm lint:all && pnpm test:ci && pnpm build:all",
    "prepare:release": "node scripts/prepare-release.js",
    "tauri": "tauri",
    "tauri:dev": "TAURI_DEV_WATCHER_IGNORE_FILE=src-tauri/.taurignore tauri dev",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.4",
    "@angular/compiler": "^20.1.4",
    "@angular/core": "^20.1.4",
    "@angular/forms": "^20.1.4",
    "@angular/platform-browser": "^20.1.4",
    "@angular/router": "^20.1.4",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.0.0",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.1.1",
    "@analogjs/vitest-angular": "^2.1.1",
    "@angular-eslint/builder": "^21.0.1",
    "@angular-eslint/eslint-plugin": "^21.0.1",
    "@angular-eslint/eslint-plugin-template": "^21.0.1",
    "@angular-eslint/schematics": "^21.0.1",
    "@angular-eslint/template-parser": "^21.0.1",
    "@angular/build": "^20.1.4",
    "@angular/cli": "^20.1.4",
    "@angular/compiler-cli": "^20.1.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/cli": "^2",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^3.2.4",
    "angular-eslint": "^21.0.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  }
}
